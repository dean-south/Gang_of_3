<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTicketAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/buttonPreviousRides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Rides"
        android:layout_below="@id/textViewTicketAmount"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonGetNewTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPreviousRides"
        android:text="Get New Ticket"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Scan QR Code"
        android:layout_below="@id/buttonGetNewTicket"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Sign Out"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>